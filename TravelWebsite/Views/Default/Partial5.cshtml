@using TravelWebsite.Models.Classes
@model List<Blog>
<div class="box1-left">
    @foreach (var item in Model)
    {
        <div class="bot-img">
            <img src="@item.BlogImage" alt="" / style="width:120px; height:65px">
        </div>
        <div class="bot-desc1">
            <p><a href="/Blog/BlogDescription/@item.ID">@item.Description.Substring(0,70)...</a></p>
        </div>
        <div class="clear"></div>
    }

</div>
