@using TravelWebsite.Models.Classes
@model List<Blog>

@foreach (var item in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" style="width:300px; height:150px" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.Title</h4>
            <span class="doller">@item.Date.ToString("dd.MM.yy")</span>
            <p>@item.Description.Substring(0,80)...</p>
            <p><a href="/Blog/BlogDescription/@item.ID"><span class="read">Read More >></span></a></p>
        </div>
    </div>
}

